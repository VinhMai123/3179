import csv

#read csv
file = open('data.csv', encoding='UTF8')
csvreader = csv.reader(file)
rows = []
for row in csvreader:
    rows.append(row[2])

file.close()

#build data
data = {}
for i in range(1,len(rows)):
    key = rows[i]
    if key == "USA":
        key = "United States of America"
    if key in data:
        data[key] = data[key] + 1
    else:
        data[key] = 1

for key in data:
    print(key,data[key])

